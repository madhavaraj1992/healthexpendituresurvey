@model WebApplication2.Models.User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Login", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 align="center">USER LOGIN</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" align="center">
                @Html.LabelFor(a => a.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(a => a.Username, new { htmlAttributes = new { @class = "form-control", @type = "text", required = "required" } })
                <div>
                    @Html.ValidationMessageFor(a => a.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" align="center">
                @Html.LabelFor(a => a.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(a => a.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", required = "required" } })
                <div>
                    @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                </div>
            </div>


            @*<div class="form-group" align="center">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox" name="remember"> Remember me</label>
                </div>
            </div>
        </div>*@

            <div class="form-group" align="center">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="LOGIN" class="btn btn-default" />
                </div>
            </div>
            <div align="center">
                @Html.ActionLink("Back to Home", "Index", "Home")
            </div>

            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        }
                </script>
            }
        </div>

        }
    </div>
</body>
</html>
